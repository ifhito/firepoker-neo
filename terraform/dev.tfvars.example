# Development Environment Configuration
# Copy this file to dev.tfvars and fill in your actual values

project_name = "firepoker-dev"
aws_region   = "ap-northeast-1"

# Notion API Configuration
# Get these from your Notion integration settings
notion_token     = "ntn_YOUR_NOTION_TOKEN_HERE"
notion_pbi_db_id = "YOUR_NOTION_DATABASE_ID_HERE"

# IP Restrictions
# Add your IP addresses in CIDR notation
allowed_cidr_blocks = [
  "0.0.0.0/0",  # Replace with your actual IP addresses
]

# ECS Configuration
ecs_desired_count = 1
ecs_app_cpu       = 256
ecs_app_memory    = 512
ecs_redis_cpu     = 64
ecs_redis_memory  = 128
